<swiper_card swiperList="{{swiperList}}"></swiper_card>
<announcement msgList="{{msgList}}"></announcement>
<!-- 
    子向父传递信息
    -标签上加上一个自定义事件
-->
<tabs tabs="{{tabs}}" bindtabsChange="tabsChange">
  <!-- 第一个tabs：学习模块 -->
  <block wx:if="{{tabs[0].isActive}}">
    <view class="learnTabs" wx:for="{{lifeList}}">
      <view class="imgNickname">
        <view class="avartor">
          <image src="{{item.userInfo.avatarUrl}}"></image>
        </view>
        <view class="nickName">
          <text>{{item.userInfo.nickName}}</text>
        </view>
      </view>
      <view class="learnContent">
        <text>{{item.content}}</text>
      </view>
      <view class="imagesList">
        <view wx:if="{{item.images.length > 1}}" data-index="{{index}}" wx:for="{{item.images}}" wx:for-item = "images" bindtap="viewImages">
          <image src='{{images}}' mode="aspectFill"></image>
        </view>
        <view wx:if="{{item.images.length == 1}}" data-index="{{index}}" wx:for="{{item.images}}" wx:for-item = "images" wx:key="index" class="oneImages" bindtap="viewImages">
          <image src='{{images}}' mode="aspectFill"></image>
        </view>
      </view>
      <view class="learnTime">
        <view class="publishTime">
          <text>{{item.time}}</text>
        </view>
        <view class="more" bindtap="showLikeCommentPannel">
          <text class="cuIcon-more"></text>
        </view>
        <view class="clickLoveCommentPannel" wx:if="{{showLoveCommPannel}}">
          <view class="loveCommentPannel">
            <view class="tab clickLove">
              <text class="cuIcon-like"></text>
              点赞
            </view>
            <view class="tab clickComment">
              <text class="cuIcon-comment"></text>
              评论
            </view>
          </view>
        </view>
      </view>
      <view class="learnLove">
        <text wx:if = "{{item.likeList != 0}}" class="cuIcon-like"></text>
        <text wx:for="{{item.likeList}}" wx:for-item = "likeItem"> {{likeItem.nickName}},</text>
      </view>
      <view class="likeCommentLine"></view>
      <view class="learnComments" wx:for="{{item.commentList}}" wx:for-index = "commentItem">
        <view class="commentItem">
          <text class="nickName">{{commentItem.nickName}}</text>:
          <text class="comment">{{commentItem.content}}</text>
        </view>
        <view class="commentItem">
          <text class="nickName">Doerr</text>:
          <text class="comment">第一条评论</text>
        </view>
      </view>
    </view>
  </block>
  <block wx:elif="{{tabs[1].isActive}}">2</block>
  <block wx:elif="{{tabs[2].isActive}}">3</block>
  <block wx:else>4</block>
</tabs>
<!-- 添加信息板块 -->
