.cardList {
    width: 600rpx;
    height: 300rpx;
    margin: 0 auto;
    margin-bottom: 100rpx;
    background-color: rgb(255, 255, 255);
}

.toolTitle {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-weight: bolder;
    margin-bottom: 10rpx;
}

.titileEn{
    font-weight: normal;
    color: gray;
}

.cardImage {
    background-color: rgba(175, 171, 171, 0.3);
    width: 100%;
    height: 100%;
    border-radius: 50rpx;
    padding: 10rpx;
}

.backImage {
    display: block;
    width: 100%;
    height: 100%;
    background-color: rgb(248, 222, 222);
    border-radius: 50rpx;
}